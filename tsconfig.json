

{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true,
    "lib": ["es6", "es7", "dom"],
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@static/*": [
        "./static/images/*"
      ]
    },
    "noImplicitAny": false,
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["dist", "node_modules"]
}
